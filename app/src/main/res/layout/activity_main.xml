<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#235A8C"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/white"
            android:color="@color/white"
            android:drawableLeft="@drawable/user"
            android:onClick="createUser"/>

        <Button
            android:id="@+id/btnStartForegroundService"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="start"
            android:textColor="#235A8C"
            android:paddingRight="20dp"/>

        <Button
            android:id="@+id/btnStopForegroundService"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="stop"
            android:textColor="#235A8C"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/white"
            android:color="@color/white"
            android:drawableRight="@drawable/addperson"
            android:onClick="newRecipient" />

    </androidx.appcompat.widget.Toolbar>
    
    <ListView
        android:id="@+id/recipientListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:dividerHeight="3dp" />


</LinearLayout>
